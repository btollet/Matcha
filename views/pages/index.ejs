<!DOCTYPE html>
<html lang="fr">

<head>
    <% include ../partials/head %>
</head>

<body>

    <header>
        <% include ../partials/header %>
    </header>

    <script>
    function connexion() {
        let formData = new FormData();
        formData.append('login', document.getElementById('login').value);
        formData.append('pass', document.getElementById('pass').value);
        let request = new XMLHttpRequest();
        request.onload = () => {
            if (request.readyState == 4 && request.status == 200) {

            }
        }
        request.open("POST", "/log");
        request.send(formData);
    }
    </script>

    <div class="container">
        <div class="jumbotron">
            <h2>Connexion</h2>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Login</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control form-control-success" id="login" placeholder="Login">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Mot de passe</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="pass" placeholder="Mot de passe">
                </div>
                <button type="submit" class="btn btn-primary" onclick="connexion()">Connexion</button>
            </div>
        </div>
    </div>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>

</html>
